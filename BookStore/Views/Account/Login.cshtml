@model SignInModel
@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@section Body{ 
    <form method="post">


        <div class="container">

            <button type="button" class="btn btn-primary pull-left" data-toggle="modal" data-target="#myModal">Login</button>


            <div class="modal fade" id="myModal" data-keyboard="false" data-backdrop="static" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Login</h4>
                        </div>
                        <div class="modal-body">

                            <div class="row">
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="control-label">UserName</label>
                                        <input type="text" class="form-control" asp-for="Username" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="control-label">Password</label>
                                        <input type="password" class="form-control" asp-for="Password" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <input type="checkbox" class="checkbox" asp-for="RememberMe" />
                                        <label class="form-check-label">Remember me</label>

                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <div class="form-group">

                                            <input type="submit" value="Login" class="btn btn-primary" asp-action="CheckPassword" />

                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-xs-4">
                                        <div class="form-group">

                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                                        </div>
                                    </div>

                                </div>

                                
                                <div class="row">
                                    <div class="col-xs-12">
                                        @ViewData["errorMessage"]

                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>







