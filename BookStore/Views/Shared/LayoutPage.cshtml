@using Microsoft.AspNetCore.Identity
@using BookStore.data
@inject SignInManager<ApplicationUser> signInManager

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LayoutPage</title>

    <link href="~/css/MenuStyle.css" rel="stylesheet" />
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    @RenderSection("Head", false)
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>



</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="./" class="navbar-brand">Management system</a>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                
                <ul class="nav navbar-nav navbar-right">
                    @if (signInManager.IsSignedIn(User))
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Authors" asp-action="Index">Authors</a>
                            </li>
                        }
                        @*<li class="dropdown">
                <a class="dropbtn">About <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="#">Mission</a></li>
                    <li><a href="#">Vision</a></li>
                    <li><a href="#">Careers</a></li>
                </ul>
            </li>*@
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Books" asp-action="Index">Books</a>
                            </li>
                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Nationality" asp-action="Index">Nationality</a>
                            </li>
                        }
                        <li>
                            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Account" asp-action="SaveRole">AddRole</a>
                            </li>
                        }
                    }
                </ul>
                    <ul class="nav navbar navbar-right">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li>
                                <a asp-controller="Account" asp-action="SignOut">
                                    <span class="glyphicon glyphicon-log-out"></span>
                                </a>
                            </li>
                            if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a asp-controller="Account" asp-action="Index">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </a>
                                </li>
                            }
                            <li>
                                <span style="color:white">@User.Identity.Name </span>
                            </li>
                        }
                        else
                        {

                            <li>
                                <a asp-controller="Account" asp-action="SignIn">
                                    <span class="glyphicon glyphicon-log-in"></span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
        </div>
    </header>
    <div class="row">
        <div class="col-md-12" style="margin-top:130px">
            @RenderSection("Body");
        </div>
    </div>
</body>
</html>
